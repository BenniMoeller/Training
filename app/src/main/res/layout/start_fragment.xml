<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.training.fragments.startFragment.StartViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/bodyWeight_nav_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bodyweight_nav_start_fragment" />

        <Button
            android:id="@+id/exercise_nav_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/startfragment_exercise_nav_string" />

        <Button
            android:id="@+id/block_nav_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_fragment_nav_block_string" />
    </LinearLayout>
</layout>