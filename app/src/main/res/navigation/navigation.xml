<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.training.fragments.startFragment.StartFragment"
        android:label="StartFragment" >
        <action
            android:id="@+id/action_startFragment_to_bodyWeightFragment"
            app:destination="@id/bodyWeightFragment" />
        <action
            android:id="@+id/action_startFragment_to_exerciseFragment"
            app:destination="@id/exerciseFragment" />
        <action
            android:id="@+id/action_startFragment_to_blockFragment"
            app:destination="@id/blockFragment" />
        <action
            android:id="@+id/action_startFragment_to_trainingFragment"
            app:destination="@id/trainingFragment" />
    </fragment>
    <fragment
        android:id="@+id/bodyWeightFragment"
        android:name="com.example.training.fragments.bodyWeightFragment.BodyWeightFragment"
        android:label="BodyWeightFragment" >
        <action
            android:id="@+id/action_bodyWeightFragment_to_startFragment"
            app:destination="@id/startFragment" />
    </fragment>
    <fragment
        android:id="@+id/exerciseFragment"
        android:name="com.example.training.fragments.exerciseFragment.ExerciseFragment"
        android:label="ExerciseFragment" >
        <action
            android:id="@+id/action_exerciseFragment_to_startFragment"
            app:destination="@id/startFragment" />
    </fragment>
    <fragment
        android:id="@+id/blockFragment"
        android:name="com.example.training.fragments.blockFragment.BlockFragment"
        android:label="BlockFragment" >
        <action
            android:id="@+id/action_blockFragment_to_startFragment"
            app:destination="@id/startFragment" />
    </fragment>
    <fragment
        android:id="@+id/trainingFragment"
        android:name="com.example.training.fragments.trainingFragment.TrainingFragment"
        android:label="TrainingFragment" >
        <action
            android:id="@+id/action_trainingFragment_to_startFragment"
            app:destination="@id/startFragment" />
    </fragment>
</navigation>